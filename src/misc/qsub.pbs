#!/bin/bash

#PBS -A lt1_starter-245
#PBS -l walltime=24:00:00
#PBS -l nodes=1:ppn=28
#PBS -l mem=128gb

module load intel/2019b
module load atools

cd $PBS_O_WORKDIR

source <(aenv --data data.csv)

. $CONDA_PREFIX/etc/profile.d/conda.sh
conda activate scip

DATA_PATH=${VSC_DATA_VO_USER}/datasets/weizmann/EhV/high_time_res/High/images/*
CONFIG_PATH=${VSC_DATA_VO_USER}/datasets/weizmann/EhV/high_time_res/scip_tiff.yml

mpiexec -np $np scip -d9104 --fits --no-report --timing "${prefix}/${PBS_ARRAYID}.json" -t1 --headless --mode mpi -l /local_scratch/ -j $n_workers -m $memory -s $partition_size $output $CONFIG_PATH $DATA_PATH